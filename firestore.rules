rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to stores and products for browsing
    match /stores/{storeId} {
      allow read: if true;  // Anyone can view stores
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /products/{productId} {
      allow read: if true;  // Anyone can view products
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /services/{serviceId} {
      allow read: if true;  // Anyone can view services
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    // Other documents require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
